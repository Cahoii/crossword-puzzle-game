rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Chỉ cho phép bất kỳ ai (người chơi)
    // được phép "tạo" (create) một bản ghi mới trong collection 'completions'
    match /completions/{docId} {
      allow create: if true; 
      
      // Không ai được phép đọc, cập nhật hay xóa dữ liệu của người khác
      allow read, update, delete: if false;
    }

    // Chặn tất cả các truy cập khác
    match /{document=**} {
      allow read, write: if false;
    }
  }
}